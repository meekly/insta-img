<h1><%= user.capitalize %> space </h1>


<input id="image-holder" class="hidden" type="file" name="file">
<button id="profile-image-upload" >Upload</button>
<style>
 .container {
     position: absolute;
     left: 10%;
     right: 10%;
     text-align: center;
     margin-top: 15px;
 }
</style>
<div class="container">
    <% images.each do |image| %>
	<% # Here go images. Displayed with flexbox. %>
	<div class="insta-img">
	    <a href="/user<%=image%>"> <img class="image lazy" data-src="<%= image %>" style="width:100%; max-width: 300px; height:auto;"  /></a>
	</div>
    <% end %>
</div>
<a name="<%=user%>" id="user"></a>

<script src="/jquery.js"></script>
<script src="/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@10.19.0/dist/lazyload.min.js"></script>
<script>
 var myLazyLoad = new LazyLoad({
     elements_selector: ".lazy"
 });
</script>
